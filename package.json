{
  "private": true,
  "name": "brave-ui-wrapper",
  "version": "0.0.0",
  "description": "List of reusable React components to empower your brave UI",
  "author": "Brave Software",
  "license": "MPL-2.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --parallel -- tsc",
    "compile": "tsc",
    "dev": "tsc -w",
    "check-security": "nsp check",
    "deploy": "storybook-to-ghpages -s public -o .out",
    "lint": "standard --fix --verbose",
    "preinstall": "cd brave-ui/ && yarn install && cd ../",
    "publish": "lerna publish && npm run deploy",
    "standard-fix": "standard --fix",
    "start": "start-storybook -p 9091 -c .storybook",
    "test": "jest --verbose -t",
    "test-all": "jest --verbose",
    "coverage": "jest --coverage --verbose"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.14",
    "@storybook/addon-info": "^3.2.17",
    "@storybook/addon-knobs": "^3.2.17",
    "@storybook/addon-options": "^3.2.14",
    "@storybook/react": "^3.2.17",
    "@storybook/storybook-deployer": "^2.0.0",
    "@types/aphrodite": "^0.5.6",
    "@types/enzyme": "^3.1.5",
    "@types/jest": "^21.1.8",
    "@types/react": "^16.0.28",
    "@types/react-dom": "^16.0.3",
    "@types/react-test-renderer": "^16.0.0",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__addon-info": "^3.2.1",
    "@types/storybook__addon-knobs": "^3.2.1",
    "@types/storybook__react": "^3.0.5",
    "aphrodite": "^1.2.5",
    "awesome-typescript-loader": "^3.4.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "jest": "^21.2.1",
    "lerna": "^2.4.0",
    "nsp": "^2.8.1",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "react": "^16.2.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "sinon": "^4.0.2",
    "standard": "^10.0.3",
    "ts-jest": "^21.2.4",
    "typescript": "^2.6.2"
  },
  "pre-commit": {
    "run": [
      "lint",
      "build"
    ]
  },
  "pre-push": {
    "run": [
      "lint",
      "test-all",
      "check-security"
    ]
  },
  "standard": {
    "ignore": [
      "**/dist/*.js"
    ]
  },
  "storybook-deployer": {
    "gitUsername": "Brave Nespresso Drinker and Static Deployer Bot",
    "gitEmail": "deploying-for-the-deployer-lord@brave.com",
    "commitMessage": "Update Styleguide"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "resetMocks": true,
    "resetModules": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "brave-ui/src/*.tsx",
      "!brave-ui/src/theme.ts",
      "!brave-ui/src/index.ts",
      "!**/node_modules/**",
      "!stories/**"
    ],
    "testMatch": [
      "<rootDir>/tests/?(*.)(test).tsx"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/.testconfig/testSetup.js",
    "setupFiles": [
      "<rootDir>/.testconfig/testPolyfills.js"
    ]
  }
}
